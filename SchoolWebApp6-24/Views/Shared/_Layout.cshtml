<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SchoolWebApp.styles.css" asp-append-version="true" />
</head>
<body class="bg-success" style="--bs-bg-opacity: .1;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-success border-bottom border-success box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SchoolWebApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 d-flex">
                        <li class="nav-item" onmouseover="this.style.textDecoration = 'underline';"
                           onmouseout="this.style.textDecoration = 'none';">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Login</a>
                        </li>
                        <li class="nav-item" onmouseover="this.style.textDecoration = 'underline';"
                           onmouseout="this.style.textDecoration = 'none';">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Info</a>
                        </li>

                        @if (User.Identity.IsAuthenticated) {
                                        <li class="nav-item" onmouseover="this.style.textDecoration = 'underline';"
                               onmouseout="this.style.textDecoration = 'none';">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Students" asp-action="Index">Students</a>
                                    </li>
                                        <li class="nav-item" onmouseover="this.style.textDecoration = 'underline';"
                               onmouseout="this.style.textDecoration = 'none';">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Subjects" asp-action="Index">Subjects</a>
                                    </li>
                                        <li class="nav-item" onmouseover="this.style.textDecoration = 'underline';"
                               onmouseout="this.style.textDecoration = 'none';">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Grades" asp-action="Index">Grades</a>
                                    </li>


                            @if (User.IsInRole("admin")) {
                                                    <li class="nav-item" onmouseover="this.style.textDecoration = 'underline';"
                                   onmouseout="this.style.textDecoration = 'none';">
                                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                                            </li>

                                                    <li class="nav-item" onmouseover="this.style.textDecoration = 'underline';"
                                   onmouseout="this.style.textDecoration = 'none';">
                                                <a class="nav-link text-dark" asp-area="" asp-controller="Role" asp-action="Index">Roles</a>
                                            </li>
                            }
                        }

                        @if (User?.Identity?.IsAuthenticated ?? false) {
                                                    <li class="nav-item" style="margin-left: auto;" onmouseover="this.style.textDecoration = 'underline';"
                               onmouseout="this.style.textDecoration = 'none';">
                                            <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">Logout</a>
                                        </li> 
                        }


                    </ul>
                </div>
            </div>
        </nav>
    </header>
   
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
   

    <footer class="border-top border-success footer  bg-success">
        <div class="container">
            &copy; 2024 Michaela Karafiátová - SchoolWeb
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
