@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ROLES";
}
<h1>All Roles</h1>
<a asp-action="Create" class="btn btn-success my-2">+ Add role</a>
<table class="table table-sm table-bordered my-2 bg-light">
    <tr>
        <th>Name</th>
        <th>Update</th>
        <th>Delete</th>
        <th>ID</th>
    </tr>
    @foreach (var role in Model) {
        <tr>
            <td>@role.Name</td>
            <td><a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@role.Id">Update</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
            <td>@role.Id</td>
        </tr>
    }
</table>
